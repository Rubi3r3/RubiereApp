<?xml version='1.0' encoding='utf-8'?>
<widget id="com.rubiere.www" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>RubiereApp</name>
    <description>Sample Apache Cordova App</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    
    <!--Icons-->
    <platform name="android">
        <icon src = "res/screen/android/splash.png"/>
    </platform>

    <!-- Preferences -->
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" /> <!-- Set the delay in milliseconds -->
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="FadeSplashScreen" value="true" />

<platform name="android">
    <!-- Remove <splash> tags -->
    <preference name="AndroidWindowSplashScreenAnimatedIcon" value="res/screen/android/splash-lpi.png" />
    <!-- Replace the value with the path to your animated icon -->
</platform>
</widget>
